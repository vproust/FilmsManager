{% extends "ValentinFilmsManagerBundle::layout.html.twig" %}

{% block title %}
  Index - {{ parent() }}
{% endblock %}

{% block valentinFilmsManager_body %}
{#Here we show the films list#}
<h2>My movies</h2>
{% for film in currentUser.getFilmsManagerUser().films %}
    <li>{{ film.name }} {{ film.genre }}  <a href="{{ path('valentin_films_manager_removeFilm', {'id': film.id}) }}">Remove this film</a></li>
  {% endfor %}

  <h2>Movies of other Users</h2>

  <ul>
    <ul>
  {% for user in users %}
    <li>{{ user.username }}</li>
    <ul>
  
    {% for film in user.getFilmsManagerUser().films %}
    <li>{{ film.name }} {{ film.genre }}</li>
  {% endfor %}
  
  </ul>
  {% endfor %}
    </ul>
  </ul>

{% endblock %}