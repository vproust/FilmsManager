{% extends "ValentinFilmsManagerBundle::layout.html.twig" %}

{% block title %}
  Index - {{ parent() }}
{% endblock %}

{% block valentinFilmsManager_body %}
{#Here we show the films list#}
  <h2>Lists of Users</h2>

  <ul>
    <ul>
  {% for user in users %}
    <li>{{ user.firstName }} {{ user.name }}</li>
    <ul>
  
    {% for film in user.films %}
    <li>{{ film.name }} {{ film.genre }}  <a href="{{ path('valentin_films_manager_removeFilm', {'id': film.id}) }}">Remove this film</a></li>
  {% endfor %}
  
  </ul>
  {% endfor %}
    </ul>
  </ul>

{% endblock %}